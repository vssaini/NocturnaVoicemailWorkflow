{
  "RingCentral": {
    "ClientId": "fkfdelpxi8dfa6lC3phhtC",
    "ClientSecret": "",
    "JwtToken": "",
    "WebhookSecret": ""
  },

  "Ftp": {
    "ExcelFileName": "Voicemail_Transcription_DEV.xlsx",
    "LogToConsole": false,
    "ReadTimeoutInSeconds": 30
  },

  "ConnectionStrings": {
    "DefaultConnection": ""
